{
	"schemaVersion": 1,
	"id": "pdapi",
	"version": "${version}",
	"name": "Pluto's Drinks API",
	"description": "A small little API for my Pluto's Drinks series",
	"authors": [
		"Pluto7073"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/pdapi",
		"sources": "https://github.com/pluto7073/PlutosDrinksAPI"
	},
	"license": "MIT",
	"icon": "assets/pdapi/icon.png",
	"accessWidener": "pdapi.accesswidener",
	"environment": "*",
	"entrypoints": {
		"main": [
			"ml.pluto7073.pdapi.PDAPI"
		],
		"client": [
			"ml.pluto7073.pdapi.client.PDAPIClient"
		],
		"rei_client": [
			"ml.pluto7073.pdapi.compat.rei.DrinkREI"
		]
	},
	"custom": {
		"modmenu": {
			"badges": [ "library" ],
			"update_checker": true,
			"parent": {
				"id": "plutosdrinks",
				"name": "Pluto's Drinks Series",
				"description": "Every mod in the Pluto's Drinks collection",
				"icon": "assets/pdapi/icon.png"
			}
		}
	},
	"mixins": [
		"pdapi.mixins.json"
	],
	"depends": {
		"fabric": ">=0.16.5",
		"minecraft": "=1.20.2",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"modmenu": "*",
		"dehydration": "*",
		"plutoscoffee": "*",
		"teatime": "*",
		"bartending": "*"
	}
}
